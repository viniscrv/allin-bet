model User {
  id            String   @id @default(uuid())
  username      String   @unique
  email         String   @unique
  summary       String?
  balance       Decimal  @default(0)
  password_hash String
  created_at    DateTime @default(now())
  Bet           Bet[]

  @@map("users")
}

model Bet {
  id         String   @id @default(uuid())
  value      Decimal
  isVictory  Boolean
  isJackpot  Boolean
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String

  @@map("bets")
}
